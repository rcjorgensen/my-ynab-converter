@page "{payeeId:int?}"
@model Application.RazorPages.Pages.Payees.EditModel
@{
    ViewData["Title"] = "Edit";
}

@if (Model.Payee.Id == 0)
{
    <h2>Add Payee</h2>
}
else
{
    <h2>Editing @Model.Payee.Name</h2>
}

<form method="post">

    <input type="hidden" asp-for="Payee.Id" />

    <div class="form-group">
        <label asp-for="Payee.Name"></label>
        <input asp-for="Payee.Name" class="form-control" />
    </div>

    @if (Model.Payee.Keywords.Any())
    {
        <table class="table">
            <tr>
                <th>Keyword</th>
                <th>Delete?</th>
                <th></th>
            </tr>
            @for (var i = 0; i < Model.Payee.Keywords.Count; i++)
            {
                <tr>
                    <td>
                        <div class="form-group">
                            <input asp-for="Payee.Keywords[i].Value" class="form-control" />
                        </div>
                    </td>
                    <td>
                        <div class="form-group">
                            <input asp-for="Payee.Keywords[i].Deleted" />
                        </div>
                    </td>
                    <td><input type="hidden" asp-for="Payee.Keywords[i].Id" /></td>
                </tr>
            }
        </table>
    }

    <div class="form-group">
        <label asp-for="NewKeyword"></label>
        <input asp-for="NewKeyword" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>

