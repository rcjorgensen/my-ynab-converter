@model Application.Models.KeywordViewModel

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this keyword?</h3>
<form asp-action="Delete">
    <input asp-for="Value" class="form-control" type="hidden" />
    <input asp-for="PayeeId" class="form-control" type="hidden" />
    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-default" />
    </div>
    <a asp-action="Details" asp-controller="Payee" asp-route-id="@Model.PayeeId">Back to payee</a>
</form>
